<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".DeliveryMaps">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/white"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        android:text="Click on map to drop Marker "/>
    <Button
        android:id="@+id/confirm_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:background="@drawable/solid_button"
        android:layout_alignBottom="@id/map"
        android:layout_alignRight="@id/map"
        android:layout_marginRight="@dimen/button_horiz_margin"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/button_to_bottom_margin"/>
</RelativeLayout>